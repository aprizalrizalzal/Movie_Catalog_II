<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:toos="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_english_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        toos:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_vertical"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_english_name"
        app:layout_constraintStart_toStartOf="@+id/tv_english_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_english_name"
        toos:text="@tools:sample/lorem" />

</androidx.constraintlayout.widget.ConstraintLayout>